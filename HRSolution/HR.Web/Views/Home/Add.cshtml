@model HR.Web.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<div class="row">
    <h3>Add New Employee by using ASP.NET MVC Core 2.2 With PostgreSQL</h3>

    <div class="col-md-6">
        <form action="/home/add" method="post">
            <div class="form-group">
                <label for="EmployeeId">Employee ID:</label>
                <input type="text" class="form-control"id="EmployeeCode" name="EmployeeCode">
            </div>
            <div class="form-group">
                <label for="FullName">Employee Name:</label>
                <input type="text" class="form-control" id="FullName" name="FullName">
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" id="Email" name="Email">
            </div>
            <div class="form-group">
                <label for="Cellphone">Cellphone:</label>
                <input type="text" class="form-control" id="Cellphone" name="Cellphone">
            </div>
            <div class="form-group">
                <label for="Address">Address:</label>
                <input type="text" class="form-control" id="Address" name="Address">
            </div>

            <button type="submit" class="btn btn-success">Submit</button>

        </form>
    </div>
</div>
