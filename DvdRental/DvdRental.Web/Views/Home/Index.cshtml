
@model DvdRental.Web.ViewModels.FilmListViewModel
@{
    ViewBag.Title = "Film Listing";
}

<div class="jumbotron">
    <h1>DVD Rental</h1>
    <p class="lead">DVD Rental! here we can mange and analysis film, actor, customer and their locations.</p>
    <p><a href="http://www.postgresqltutorial.com/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Film Listing</h2>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Release Year</th>
                    <th>Rental Rate</th>
                    <th>Rating</th>
                    <th>Length</th>
                    <th>Replacement Cost</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Films)
                {
                <tr>
                    <td>@item.title</td>
                    <td>@item.release_year</td>
                    <td>@item.rental_rate</td>
                    <td>@item.rating</td>
                    <td>@item.length</td>
                    <td>@item.replacement_cost</td>
                    <td>@item.description</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
